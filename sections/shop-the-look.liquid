{% comment %} /sections/shop-the-look.liquid {% endcomment %}

{{ 'section-shop-the-look.css' | asset_url | stylesheet_tag }}
<script src="{{ 'section-shop-the-look.js' | asset_url }}" type="module"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="shop-the-look color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <shop-the-look data-section-id="{{ section.id }}">
    <div class="page-width">
      {% if section.settings.heading != blank %}
        <div class="shop-the-look__header">
          <h2 class="shop-the-look__heading">{{ section.settings.heading }}</h2>
          {% if section.settings.view_all_url != blank and section.settings.view_all_text != blank %}
            <a href="{{ section.settings.view_all_url }}" class="shop-the-look__view-all">
              {{ section.settings.view_all_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}

      <div
        id="shop-the-look-{{ section.id }}"
        class="shop-the-look__slider swiper"
      >
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            {%- if block.type == 'slide' -%}
              <div class="swiper-slide" {{ block.shopify_attributes }}>
                <div class="shop-the-look__slide">
                  <div class="shop-the-look__image-container">
                    {% if block.settings.image != blank %}
                      <img
                        srcset="
                          {%- if block.settings.image.width >= 400 -%}{{ block.settings.image | image_url: width: 400 }} 400w,{%- endif -%}
                          {%- if block.settings.image.width >= 600 -%}{{ block.settings.image | image_url: width: 600 }} 600w,{%- endif -%}
                          {%- if block.settings.image.width >= 800 -%}{{ block.settings.image | image_url: width: 800 }} 800w,{%- endif -%}
                          {{ block.settings.image | image_url }} {{ block.settings.image.width }}w
                        "
                        src="{{ block.settings.image | image_url: width: 800 }}"
                        sizes="(min-width: 990px) 50vw, 100vw"
                        alt="{{ block.settings.image.alt | default: section.settings.heading | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image.width }}"
                        height="{{ block.settings.image.height }}"
                        class="shop-the-look__image"
                      >
                    {% else %}
                      <div class="shop-the-look__image-placeholder">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {% endif %}

                    {%- comment -%} Hotspots {%- endcomment -%}
                    {%- liquid
                      assign hotspot_1_enabled = block.settings.hotspot_1_enabled
                      assign hotspot_2_enabled = block.settings.hotspot_2_enabled
                      assign hotspot_3_enabled = block.settings.hotspot_3_enabled
                      assign hotspot_4_enabled = block.settings.hotspot_4_enabled

                      assign has_hotspots = false
                      if hotspot_1_enabled or hotspot_2_enabled or hotspot_3_enabled or hotspot_4_enabled
                        assign has_hotspots = true
                      endif
                    -%}

                    {%- if has_hotspots -%}
                      <div class="shop-the-look__hotspots">
                        {% render 'component-hotspot',
                          enabled: hotspot_1_enabled,
                          text: block.settings.hotspot_1_text,
                          horizontal: block.settings.hotspot_1_horizontal,
                          vertical: block.settings.hotspot_1_vertical,
                          index: 1
                        %}

                        {% render 'component-hotspot',
                          enabled: hotspot_2_enabled,
                          text: block.settings.hotspot_2_text,
                          horizontal: block.settings.hotspot_2_horizontal,
                          vertical: block.settings.hotspot_2_vertical,
                          index: 2
                        %}

                        {% render 'component-hotspot',
                          enabled: hotspot_3_enabled,
                          text: block.settings.hotspot_3_text,
                          horizontal: block.settings.hotspot_3_horizontal,
                          vertical: block.settings.hotspot_3_vertical,
                          index: 3
                        %}

                        {% render 'component-hotspot',
                          enabled: hotspot_4_enabled,
                          text: block.settings.hotspot_4_text,
                          horizontal: block.settings.hotspot_4_horizontal,
                          vertical: block.settings.hotspot_4_vertical,
                          index: 4
                        %}
                      </div>
                    {%- endif -%}
                  </div>

                  <div class="shop-the-look__products">
                    {%- liquid
                      assign product_1 = block.settings.product_1
                      assign product_2 = block.settings.product_2
                      assign product_3 = block.settings.product_3
                      assign product_4 = block.settings.product_4
                    -%}

                    {%- if product_1 != blank -%}
                      <div class="shop-the-look__product-card">
                        {% render 'component-product-card',
                          card_product: product_1,
                          show_vendor: section.settings.show_vendor,
                          section_id: section.id,
                          quick_add: 'standard'
                        %}
                      </div>
                    {%- else -%}
                      <div class="shop-the-look__product-card">
                        <div class="product-card-child">
                          <div class="card-media">
                            <div class="card-media-child card-media-no-image">
                              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                            </div>
                          </div>
                          <div class="card-information">
                            <h2 class="card-heading product-grid-heading">
                              <span>Product 1</span>
                            </h2>
                            <div class="card-pricing">
                              <div class="price__regular">
                                <span class="price-item price-item--regular">{{ 1999 | money }}</span>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    {%- endif -%}

                    {%- if product_2 != blank -%}
                      <div class="shop-the-look__product-card">
                        {% render 'component-product-card',
                          card_product: product_2,
                          show_vendor: section.settings.show_vendor,
                          media_aspect_ratio: section.settings.image_ratio,
                          section_id: section.id,
                          quick_add: 'standard'
                        %}
                      </div>
                    {%- else -%}
                      <div class="shop-the-look__product-card">
                        <div class="product-card-child">
                          <div class="card-media">
                            <div class="card-media-child card-media-no-image">
                              {{ 'product-2' | placeholder_svg_tag: 'placeholder-svg' }}
                            </div>
                          </div>
                          <div class="card-information">
                            <h2 class="card-heading product-grid-heading">
                              <span>Product 2</span>
                            </h2>
                            <div class="card-pricing">
                              <div class="price__regular">
                                <span class="price-item price-item--regular">{{ 1999 | money }}</span>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    {%- endif -%}

                    {%- if product_3 != blank -%}
                      <div class="shop-the-look__product-card">
                        {% render 'component-product-card',
                          card_product: product_3,
                          show_vendor: section.settings.show_vendor,
                          media_aspect_ratio: section.settings.image_ratio,
                          section_id: section.id,
                          quick_add: 'standard'
                        %}
                      </div>
                    {%- else -%}
                      <div class="shop-the-look__product-card">
                        <div class="product-card-child">
                          <div class="card-media">
                            <div class="card-media-child card-media-no-image">
                              {{ 'product-3' | placeholder_svg_tag: 'placeholder-svg' }}
                            </div>
                          </div>
                          <div class="card-information">
                            <h2 class="card-heading product-grid-heading">
                              <span>Product 3</span>
                            </h2>
                            <div class="card-pricing">
                              <div class="price__regular">
                                <span class="price-item price-item--regular">{{ 1999 | money }}</span>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    {%- endif -%}

                    {%- if product_4 != blank -%}
                      <div class="shop-the-look__product-card">
                        {% render 'component-product-card',
                          card_product: product_4,
                          show_vendor: section.settings.show_vendor,
                          media_aspect_ratio: section.settings.image_ratio,
                          section_id: section.id,
                          quick_add: 'standard'
                        %}
                      </div>
                    {%- else -%}
                      <div class="shop-the-look__product-card">
                        <div class="product-card-child">
                          <div class="card-media">
                            <div class="card-media-child card-media-no-image">
                              {{ 'product-4' | placeholder_svg_tag: 'placeholder-svg' }}
                            </div>
                          </div>
                          <div class="card-information">
                            <h2 class="card-heading product-grid-heading">
                              <span>Product 4</span>
                            </h2>
                            <div class="card-pricing">
                              <div class="price__regular">
                                <span class="price-item price-item--regular">{{ 1999 | money }}</span>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>

        {%- if section.blocks.size > 1 -%}
          <div class="shop-the-look__controls">
            <div class="shop-the-look__progress-bar">
              <div class="shop-the-look__progress-fill"></div>
            </div>
            <div class="shop-the-look__navigation">
              <button type="button" class="shop-the-look__nav-button shop-the-look__nav-button--prev" aria-label="Previous slide">
                {{ 'icon-arrow-prev.svg' | inline_asset_content }}
              </button>
              <button type="button" class="shop-the-look__nav-button shop-the-look__nav-button--next" aria-label="Next slide">
                {{ 'icon-arrow-next.svg' | inline_asset_content }}
              </button>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </shop-the-look>
</div>

