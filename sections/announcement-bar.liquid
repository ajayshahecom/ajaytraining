{% comment %}
  Announcement Bar Section
  - Displays a customizable announcement message with an optional link and emoji.
{% endcomment %}

{% style %}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }

  .announcement-bar-section {
    width: 100%;
    position: relative;
  }

  .announcement-bar {
    padding: 0.5rem 0;
    text-align: center;
  }

  .announcement-bar__content {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    position: relative;
    height: 3.5rem;
  }

  .announcement-bar__arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.2rem;
    height: 3.2rem;
    background: none;
    border: none;
    color: inherit;
    cursor: pointer;
    padding: 0;
    border-radius: 50%;
    transition: opacity 0.2s ease, background-color 0.2s ease;
    flex-shrink: 0;
  }

  .announcement-bar__arrow svg {
    width: 1.6rem;
    height: 1.6rem;
    display: block;
  }

  .announcement-bar__arrow:hover {
    opacity: 0.7;
    background-color: rgba(255, 255, 255, 0.1);
  }

  .announcement-bar__arrow:active {
    transform: scale(0.95);
  }

  .announcement-bar__message {
    flex: 1;
    margin: 0;
    font-size: 1.4rem;
    font-weight: 500;
    line-height: 1.5;
    letter-spacing: 0.04em;
    white-space: normal;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    flex-wrap: wrap;
  }

  .announcement-bar__message > div {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    flex-wrap: wrap;
  }

  .announcement-bar__link {
    text-decoration: underline;
    text-underline-offset: 0.3rem;
    text-decoration-thickness: 0.1rem;
    transition: text-decoration-thickness 0.2s ease;
    white-space: nowrap;
  }

  .announcement-bar__link:hover {
    text-decoration-thickness: 0.2rem;
  }

  .announcement-bar__emoji {
    font-size: 1.6rem;
    line-height: 1;
    margin-left: 0.4rem;
  }

  .fade-in {
    animation: fadeInAnim 0.3s ease-in-out;
  }

  @keyframes fadeInAnim {
    from {
      opacity: 0;
      transform: translateY(-0.4rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .announcement-bar {
      padding: 1.2rem 1.5rem;
    }

    .announcement-bar__content {
      gap: 0;
    }

    .announcement-bar__arrow {
      display: none;
    }

    .announcement-bar__message {
      font-size: 1.3rem;
      gap: 0.6rem;
    }

    .announcement-bar__emoji {
      font-size: 1.4rem;
    }
  }

  @media (max-width: 480px) {
    .announcement-bar {
      padding: 1rem 1.2rem;
    }

    .announcement-bar__message {
      font-size: 1.2rem;
    }

    .announcement-bar__link {
      text-underline-offset: 0.2rem;
    }
  }
{% endstyle %}

{%- liquid
  assign text_color = section.settings.text_color
-%}

{% if section.settings.show_announcement and section.blocks.size > 0 %}
  <section class="announcement-bar-section">
    <div
      class="announcement-bar"
      x-data="
        {
          idx: 0,
          total: {{ section.blocks.size }},
          interval: null,
          startAutoScroll() {
            if (this.total > 1) {
              this.interval = setInterval(() => {
                this.idx = (this.idx + 1) % this.total;
              }, ({{ section.settings.auto_rotate_interval | default: 4 }} * 1000));
            }
          },
          stopAutoScroll() {
            if (this.interval) {
              clearInterval(this.interval);
              this.interval = null;
            }
          }
        }
      "
      x-init="startAutoScroll()"
      @mouseenter="stopAutoScroll()"
      @mouseleave="startAutoScroll()"
      @focusin="stopAutoScroll()"
      @focusout="startAutoScroll()"
    >
      <div class="page-width announcement-bar__content">
        {% if section.blocks.size > 1 %}
          <button
            @click="idx = idx === 0 ? total - 1 : idx - 1"
            aria-label="Previous announcement"
            class="announcement-bar__arrow announcement-bar__arrow--prev"
            x-show="total > 1"
            type="button"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        {% endif %}

        <div class="announcement-bar__message">
          {% for block in section.blocks %}
            <div
              {{ block.shopify_attributes }}
              x-show="idx === {{ forloop.index0 }}"
              x-transition:fade.300ms
              {% unless forloop.first %}
                style="display: none;"
              {% endunless %}
              :class="idx === {{ forloop.index0 }} ? 'fade-in' : ''"
            >
              {{ block.settings.text }}
              {% if block.settings.link_text and block.settings.link_url %}
                <a href="{{ block.settings.link_url }}" class="announcement-bar__link" style="color: {{ text_color }};">
                  {{ block.settings.link_text }}
                </a>
              {% endif %}
              {% if block.settings.emoji != blank %}
                <span class="announcement-bar__emoji">{{ block.settings.emoji }}</span>
              {% endif %}
            </div>
          {% endfor %}
        </div>

        {% if section.blocks.size > 1 %}
          <button
            @click="idx = idx === total - 1 ? 0 : idx + 1"
            aria-label="Next announcement"
            class="announcement-bar__arrow announcement-bar__arrow--next"
            x-show="total > 1"
            type="button"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        {% endif %}
      </div>
    </div>
  </section>
{% endif %}

<script>
  const announcementBar = document.querySelector('.announcement-bar__content');
  const announcementBarHeight = announcementBar.offsetHeight;
  document.documentElement.style.setProperty('--announcement-bar-height', `${announcementBarHeight}px`);
</script>

{% schema %}
{
  "name": "Announcement Bar",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "auto_rotate_interval",
      "label": "Auto-rotate interval (seconds)",
      "min": 2,
      "max": 15,
      "step": 1,
      "default": 4
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Welcome to our store"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "emoji",
          "label": "Emoji",
          "default": "ðŸŽ‰"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
