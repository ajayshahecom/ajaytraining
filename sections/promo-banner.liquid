{% comment %} /sections/promo-banner.liquid {% endcomment %}

{{ 'section-promo-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-icon-size {
    --selling-points-icon-size: {{ section.settings.icon_size }}px;
  }
{%- endstyle -%}

{%- liquid
  assign image_placement = section.settings.image_placement
  assign image_height = section.settings.image_height
  assign image_fit = section.settings.image_fit
  assign image_position = section.settings.image_position
  assign button_background_color = section.settings.button_background_color
  assign button_text_color = section.settings.button_text_color
  assign product = section.settings.product
  assign custom_image = section.settings.custom_image
-%}

{%- liquid
  assign product_title = product.title
  assign product_description = product.description | strip_html | truncatewords: 20
  assign product_price = product.price_min | money
  assign product_url = product.url
  assign product_image = custom_image | default: product.featured_image
-%}

<div
  class="color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding"
  style="
    --promo-banner-image-placement: {{ image_placement }};
    --promo-banner-image-height: {{ image_height }}px;
    --promo-banner-image-fit: {{ image_fit }};
    --promo-banner-image-position: {{ image_position }};
    --promo-banner-button-color: {{ button_background_color }};
    --promo-banner-button-text-color: {{ button_text_color }};
  "
>
  <div class="page-width">
    <div class="promo-banner__container">
      <div class="promo-banner__content">
        {%- if product_title != blank -%}
          <h3 class="promo-banner__title">{{ product_title | escape }}</h3>
        {% else %}
          <h3 class="promo-banner__title">Promo Product's Title</h3>
        {%- endif -%}

        {%- if product_description != blank -%}
          <p class="promo-banner__description">{{ product_description }}</p>
        {% else %}
          <p class="promo-banner__description">Promo Product's Description</p>
        {%- endif -%}

        {%- if product_price != blank -%}
          <div class="promo-banner__price">{{ product_price }}</div>
        {% else %}
          <div class="promo-banner__price">$69.00</div>
        {%- endif -%}

        {%- if product_url != blank -%}
          <a href="{{ product_url }}" class="promo-banner__button-link">
            <span class="promo-banner__button">SHOP NOW</span>
          </a>
        {% else %}
          <a href="{{ product_url }}" class="promo-banner__button-link">
            <span class="promo-banner__button">SHOP NOW</span>
          </a>
        {%- endif -%}
      </div>

      <div class="promo-banner__image-wrapper {% if product_image == blank %}blank{% endif %}">
        {%- if product_image != blank -%}
          <img
            srcset="
              {%- if product_image.width >= 300 -%}{{ product_image | image_url: width: 300 }} 300w,{%- endif -%}
              {%- if product_image.width >= 600 -%}{{ product_image | image_url: width: 600 }} 600w,{%- endif -%}
              {%- if product_image.width >= 900 -%}{{ product_image | image_url: width: 900 }} 900w,{%- endif -%}
              {{ product_image | image_url }} {{ product_image.width }}w
            "
            src="{{ product_image | image_url: width: 600 }}"
            sizes="(min-width: 750px) 50vw, 100vw"
            alt="{{ product_image.alt | default: product_title | escape }}"
            loading="lazy"
            width="{{ product_image.width }}"
            height="{{ product_image.height }}"
            class="promo-banner__image"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Promo Banner",
  "tag": "section",
  "class": "promo-banner",
  "settings": [
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Product Settings"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product",
      "info": "Select a product to display its title, price, and link to product page"
    },
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "custom_image",
      "label": "Custom Image",
      "info": "Optional: Override the product's featured image with a custom image"
    },
    {
      "type": "select",
      "id": "image_placement",
      "label": "Image Placement (Desktop)",
      "options": [
        { "value": "row", "label": "Right" },
        { "value": "row-reverse", "label": "Left" }
      ],
      "default": "row",
      "info": "On mobile, image will always appear below the content"
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Image Height",
      "unit": "px",
      "min": 400,
      "max": 800,
      "step": 50,
      "default": 500
    },
    {
      "type": "select",
      "id": "image_fit",
      "label": "Image Fit",
      "options": [
        { "label": "Cover", "value": "cover" },
        { "label": "Contain", "value": "contain" }
      ],
      "default": "cover"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "label": "Top", "value": "top" },
        { "label": "Center", "value": "center" },
        { "label": "Bottom", "value": "bottom" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Spacing Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Promo Banner"
    }
  ]
}
{% endschema %}
