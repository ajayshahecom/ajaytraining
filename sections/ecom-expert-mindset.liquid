{{ 'section-ecom-expert-mindset.css' | asset_url | stylesheet_tag }}
<script src="{{ 'section-ecom-expert-mindset.js' | asset_url }}" type="module"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    padding-left: {{ section.settings.padding_left_mobile }}px;
    padding-right: {{ section.settings.padding_right_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      padding-left: {{ section.settings.padding_left }}px;
      padding-right: {{ section.settings.padding_right }}px;
    }
  }

  .ecom-expert-mindset[data-section-id="{{ section.id }}"] {
    --button-color: {{ section.settings.button_color }};
    --button-text-color: {{ section.settings.button_text_color }};
    --Light-BG: {{ section.settings.card_bg_color }};
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
  }
{%- endstyle -%}

<ecom-expert-mindset
  class="color-{{ section.settings.color_scheme }} ecom-expert-mindset section-{{ section.id }}-padding"
  data-section-id="{{ section.id }}"
  data-enable-mobile-slider="{{ section.settings.enable_mobile_slider }}"
>
  <div class="page-width">
    <div class="ecom-expert-mindset__header">
      {%- if section.settings.label != blank -%}
        <div class="ecom-expert-mindset__label">
          <span class="ecom-expert-mindset__label-line"></span>
          <span class="ecom-expert-mindset__label-text">{{ section.settings.label | escape }}</span>
        </div>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h2 class="ecom-expert-mindset__heading">{{ section.settings.heading | escape }}</h2>
      {%- endif -%}

      {%- if section.settings.paragraph != blank -%}
        <p class="ecom-expert-mindset__paragraph">{{ section.settings.paragraph | escape }}</p>
      {%- endif -%}

      {%- if section.settings.button_text != blank and section.settings.button_url != blank -%}
        <a href="{{ section.settings.button_url }}" class="ecom-expert-mindset__button button">
          {{ section.settings.button_text | escape }}
        </a>
      {%- endif -%}
    </div>

    <div class="ecom-expert-mindset__cards-wrapper">
      <div
        class="ecom-expert-mindset__cards swiper{% if section.settings.enable_mobile_slider %} ecom-expert-mindset__cards--slider{% endif %}"
        id="ecom-cards-{{ section.id }}"
      >
        <div class="ecom-expert-mindset__cards-grid swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="ecom-expert-mindset__card swiper-slide" {{ block.shopify_attributes }}>
              {%- if block.settings.number != blank -%}
                <div class="ecom-expert-mindset__card-number">{{ block.settings.number | escape }}</div>
              {%- endif -%}

              <div class="ecom-expert-mindset__card-content">
                {%- if block.settings.title != blank -%}
                  <h3 class="ecom-expert-mindset__card-title">{{ block.settings.title | escape }}</h3>
                {%- endif -%}

                {%- if block.settings.description != blank -%}
                  <p class="ecom-expert-mindset__card-description">{{ block.settings.description | escape }}</p>
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>
        {%- if section.settings.enable_mobile_slider and section.blocks.size > 1 -%}
          <div class="swiper-pagination ecom-expert-mindset__pagination"></div>
        {%- endif -%}
      </div>
    </div>
  </div>
</ecom-expert-mindset>

