    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "header",
      "content": "Left Side - Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_label",
      "label": "Image Label",
      "default": "Image Label"
    },
    {
      "type": "header",
      "content": "Right Side - Content"
    },
    {
      "type": "text",
      "id": "heading_percentage",
      "label": "Heading (Percentage)",
      "default": "70%"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Write subheading here"
    },
    {
      "type": "header",
      "content": "Features"
    },
    {
      "type": "text",
      "id": "feature_1",
      "label": "Feature 1",
      "default": "Feature 1"
    },
    {
      "type": "text",
      "id": "feature_2",
      "label": "Feature 2",
      "default": "Feature 2"
    },
    {
      "type": "text",
      "id": "feature_3",
      "label": "Feature 3",
      "default": "Feature 3"
    },
    {
      "type": "text",
      "id": "feature_4",
      "label": "Feature 4",
      "default": "Feature 4"
    },
    {
      "type": "header",
      "content": "Disclaimer"
    },
    {
      "type": "richtext",
      "id": "disclaimer",
      "label": "Disclaimer Text",
      "default": "<p>Write disclaimer here</p>"
    }
  ],
  "presets": [
    {
      "name": "Animated Features V2"
    }
  ]
}
{% endschema %}
